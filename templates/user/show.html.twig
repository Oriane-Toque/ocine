{% extends 'base.html.twig' %}

{% block title %}{{title}} - O'Cin√©{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="table-dark">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th class="table-dark">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="table-dark">Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th class="table-dark">Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_list') }}" class="btn btn-primary">Back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
