{% extends 'base.html.twig' %}

{% block title %}
	{{ title }} - O'Ciné
{% endblock %}

{% block menuMovie %}active{% endblock %}

{% block body %}
	<ul class="list-group">
		{% for movie in movies %}
			<li class="list-group-item d-flex justify-content-between align-items-center mb-3">
				<div class="ms-2 me-auto">
					<div class="fw-bold">#{{ loop.index }} - {{ movie.title }}</div>
					Durée : {{ movie.duration }} mins
				</div>
				<a href="{{ path("movie_read", {"id": movie.id}) }}" class="btn btn-primary">Détails</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
